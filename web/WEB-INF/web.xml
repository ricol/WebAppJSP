<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
    <display-name>MyJSPWeb</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>wangxinghe.name</param-name>
        <param-value>ricolwang</param-value>
    </context-param>
    <context-param>
        <param-name>wangxinghe.age</param-name>
        <param-value>29</param-value>
    </context-param>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>servlet.MainServlet</servlet-class>
        <init-param>
            <param-name>InitParameter</param-name>
            <param-value>Hello, welcome to JSP world!</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/servlet/MainServlet</url-pattern>
    </servlet-mapping>
</web-app>